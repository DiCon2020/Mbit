<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mbit" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:ambientShadowAlpha">0.03</item>
        <item name="android:spotShadowAlpha">0.03</item>
        <item name="android:windowBackground">@color/bgColorDefault</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_box_top</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="android:colorForeground">@color/materialGray5</item>
        <item name="android:fontFamily">@font/font_primary_extrabold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/font_primary_extrabold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorSwitchThumbNormal">@color/bgColorDefault</item>
        <item name="android:colorForeground">@color/materialGray4</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_primary_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDefault</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/round_box</item>
        <item name="android:fontFamily">@font/font_secondary_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDefault</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ButtonStyleColored" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/font_primary_extrabold</item>
        <item name="android:background">@drawable/round_box</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonSecondaryStyleColoredText" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/font_primary_extrabold</item>
        <item name="android:background">@drawable/round_box</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonSecondaryStyleWhiteText" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/font_primary_extrabold</item>
        <item name="android:background">@drawable/round_box</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonStyleBorder" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/font_primary_extrabold</item>
        <item name="android:background">@drawable/round_box_border</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonSquareStyleColored" parent="Widget.AppCompat.Button">
        <item name="android:padding">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/font_primary_extrabold</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>